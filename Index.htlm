<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Simple Budget Planner</title>

<style>
body {
  font-family: Arial;
  background: #f4f6f9;
  padding: 20px;
  text-align: center;
}

.container {
  max-width: 500px;
  margin: auto;
  background: white;
  padding: 25px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

input, select, button {
  width: 100%;
  padding: 10px;
  margin: 8px 0;
}

button {
  background: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}

button:hover {
  background: #0056b3;
}

.expense-item {
  display: flex;
  justify-content: space-between;
  background: #f1f1f1;
  padding: 8px;
  margin-top: 5px;
  border-radius: 5px;
}
</style>
</head>

<body>

<div class="container">

<h2>Weekly Budget Planner</h2>

<input type="number" id="income" placeholder="Enter Weekly Income">

<select id="category">
  <option>Food</option>
  <option>Transportation</option>
  <option>Fun</option>
  <option>Bills</option>
  <option>Savings</option>
  <option>Other</option>
</select>

<input type="number" id="amount" placeholder="Enter Expense Amount">

<button onclick="addExpense()">Add Expense</button>

<h3>Total Expenses: <span id="total">0</span></h3>
<h3>Remaining Money: <span id="remaining">0</span></h3>

<div id="expensesList"></div>

<button onclick="resetBudget()">Reset Budget</button>

</div>

<script>
let expenses = [];

function addExpense() {
  let income = parseFloat(document.getElementById("income").value);
  let amount = parseFloat(document.getElementById("amount").value);
  let category = document.getElementById("category").value;

  if (isNaN(income) || isNaN(amount)) {
    alert("Please enter valid numbers.");
    return;
  }

  expenses.push({ category, amount });
  displayExpenses();
  document.getElementById("amount").value = "";
}

function displayExpenses() {
  let total = 0;
  let expensesList = document.getElementById("expensesList");
  expensesList.innerHTML = "";

  expenses.forEach(exp => {
    total += exp.amount;

    let div = document.createElement("div");
    div.className = "expense-item";
    div.innerHTML = `
      <span>${exp.category}</span>
      <span>${exp.amount}</span>
    `;
    expensesList.appendChild(div);
  });

  document.getElementById("total").innerText = total;
  document.getElementById("remaining").innerText =
    document.getElementById("income").value - total;
}

function resetBudget() {
  expenses = [];
  document.getElementById("expensesList").innerHTML = "";
  document.getElementById("total").innerText = 0;
  document.getElementById("remaining").innerText = 0;
}
</script>

</body>
</html>
